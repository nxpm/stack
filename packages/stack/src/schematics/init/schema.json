{
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "Init",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "ci": {
      "type": "string",
      "description": "Select the CI workflow to generate",
      "alias": "c",
      "default": "github"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed",
      "alias": "d"
    },
    "library": {
      "description": "The UI library",
      "type": "string",
      "default": "bootstrap",
      "x-prompt": {
        "message": "Which type of library would you like to ise?",
        "type": "list",
        "items": [
          {
            "value": "bootstrap",
            "label": "Bootstrap"
          },
          {
            "value": "tailwind",
            "label": "Tailwind"
          }
        ]
      }
    }
  },
  "required": ["name"]
}
