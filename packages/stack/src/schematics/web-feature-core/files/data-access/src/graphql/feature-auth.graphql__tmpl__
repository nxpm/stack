fragment AuthTokenDetails on AuthToken {
  token
}

fragment UserDetails on User {
  id
  firstName
  lastName
  name
  username
  avatarUrl
  email
  role
}

query me {
  me {
    ...UserDetails
  }
}

mutation Logout {
  logout
}

mutation Login($input: LoginInput!) {
  login(input: $input) {
    ...AuthTokenDetails
  }
}

mutation Register($input: RegisterInput!) {
  register(input: $input) {
    ...AuthTokenDetails
  }
}
