query Uptime {
  uptime
}

fragment CorePagingDetails on CorePaging {
  limit
  skip
  total
}

fragment IntercomDetails on IntercomMessage {
  type
  scope
  payload
}

mutation IntercomPub($type: String! $scope: String $payload: JSON) {
  intercomPub(
    type: $type
    scope: $scope
    payload: $payload
  ) {
    ...IntercomDetails
  }
}

subscription IntercomSub {
  intercomSub {
    ...IntercomDetails
  }
}
