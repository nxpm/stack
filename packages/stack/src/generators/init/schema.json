{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "Init",
  "title": "",
  "type": "object",
  "properties": {
    "apiName": {
      "type": "string",
      "description": "Name of the API project",
      "default": "api"
    },
    "mobileName": {
      "type": "string",
      "description": "Name of the Mobile project",
      "default": "mobile"
    },
    "webName": {
      "type": "string",
      "description": "Name of the Web project",
      "default": "web"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed",
      "alias": "d"
    },
    "skipApi": {
      "type": "boolean",
      "description": "Skip generating the 'api' app"
    },
    "skipMobile": {
      "type": "boolean",
      "description": "Skip generating the 'mobile' app"
    },
    "skipWeb": {
      "type": "boolean",
      "description": "Skip generating the 'web' app"
    }
  },
  "required": []
}
