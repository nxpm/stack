{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "Api",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed",
      "alias": "d"
    },
    "type": {
      "type": "string",
      "enum": ["nest"],
      "description": "Type or API project",
      "default": "nest"
    }
  },
  "required": ["name"]
}
